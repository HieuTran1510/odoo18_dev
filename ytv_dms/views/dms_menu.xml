<odoo>
    <menuitem id="menu_dms_root" name="DMS" sequence="10"/>

    <record id="action_dms_documents" model="ir.actions.act_window">
        <field name="name">Danh mục tài liệu</field>
        <field name="res_model">dms.document</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_dms_document_list"/>
        <field name="search_view_id" ref="view_dms_document_search"/>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'view'}</field>
    </record>

    <menuitem id="menu_dms_documents_action" name="Danh mục tài liệu" parent="menu_dms_root" action="action_dms_documents"/>

    <!-- ACTION -->
    <record id="action_dms_document_version_report" model="ir.actions.act_window">
        <field name="name">Báo cáo</field>
        <field name="res_model">dms.document.version</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="view_dms_document_version_pivot"/>
        <field name="search_view_id" ref="view_dms_document_version_search"/>
    </record>

    <!-- MENU -->
    <menuitem id="menu_dms_version_report" name="Báo cáo" parent="menu_dms_root" action="action_dms_document_version_report" sequence="30"/>
</odoo>
